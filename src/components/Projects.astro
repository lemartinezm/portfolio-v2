    projectLink: "https://localhost:3000",
  },
  {
    image: image6,
    imageAlt: "Project image",
    title: "Project title",
    description: "Project description",
    techs: ["React", "Next.js", "Express"],
    projectLink: "https://localhost:3000",
  },
  {
    image: image6,
    imageAlt: "Project image",
    title: "Project title",
    description: "Project description",
    techs: ["React", "Next.js", "Express"],
    projectLink: "https://localhost:3000",
  },
];
---

<section id="projects">
  <h2>Projects</h2>
  <ul>
    {projects.map((project) => <ProjectCard {...project} />)}
  </ul>
</section>

<style>
  * {
    margin: 0;
  }

  section {
    padding: 3rem 0;
    display: flex;
    flex-direction: column;
    justify-content: center;
    gap: 1rem;
  }

  h2 {
    font-size: 3rem;
  }

  p {
    font-size: 1.125rem;
  }

  ul {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(16rem, 1fr));
    gap: 1rem;
    padding: 0;
  }
</style>
