import image6 from "../assets/image6.webp";
const projects = [
  {
    image: image6,
    imageAlt: "Project image",
    title: "Project title",
    description: "Project description",
    techs: ["React", "Next.js", "Express"],
    projectLink: "https://localhost:3000",
  },
  {
    image: image6,
    imageAlt: "Project image",
