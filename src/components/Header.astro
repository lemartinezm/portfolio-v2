<style>
  #open_drawer {
    position: fixed;
    top: 1rem;
    left: 1rem;
    display: flex;
    align-items: center;
    justify-content: center;
    height: 1.5rem;
    width: 1.5rem;
  }

  #close_drawer {
    position: absolute;
    display: flex;
    justify-content: center;
    align-items: center;
    top: 1rem;
    left: 1rem;
    height: 1.5rem;
    width: 1.5rem;
  }

  input:checked ~ nav {
    transform: none;
  }

  nav {
    display: flex;
    flex-direction: column;
    position: fixed;
    background-color: #11161f;
    transform: translatex(-100%);
    transition: transform 0.3s;
    height: 100%;
  }

  nav h2 {
    display: none;
  }

  ul {
    list-style-type: none;
    padding: 0 1.5rem;
    margin: 0;
  }
  .nav_links {
    display: flex;
    flex-direction: column;
    flex: 1;
    justify-content: center;
    gap: 1rem;
  }

  .social_links {
    display: none;
    gap: 0.5rem;
  }

  a {
    color: #fff;
    font-weight: 500;
    text-decoration: none;
    display: flex;
    align-items: center;
    gap: 0.5rem;
    transition: color 0.15s ease-in-out;
  }

  a:visited {
    color: #fff;
  }

  a:hover,
  a.active {
    color: #3498db;
  }

  @media (min-width: 768px) {
    #open_drawer,
    #close_drawer {
      display: none;
    }
    nav {
      position: sticky;
      top: 0;
      left: 0;
      max-height: 100vh;
      display: flex;
      transform: none;
      min-height: 100vh;
      background-color: transparent;
    }

    nav h2 {
      display: block;
      padding: 1.5rem;
      font-size: 2rem;
      margin: 0;
    }

    .social_links {
      display: flex;
      padding: 1.5rem;
    }
  }
</style>

<script>
  const sections = document.querySelectorAll("section");
  const navLinks = document.querySelectorAll("nav ul li a");
  const observer = new IntersectionObserver(
    (entries) => {
      entries.forEach((entry) => {
        if (entry.isIntersecting) {
          const sectionId = entry.target.getAttribute("id");
          navLinks.forEach((link) => link.classList.remove("active"));
          document
            .querySelector(`nav ul li a[href="#${sectionId}"]`)
            ?.classList.add("active");
        }
      });
    },
    {
      threshold: 0.8,
    }
  );

  sections.forEach((section) => observer.observe(section));
</script>
