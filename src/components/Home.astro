<section id="home">
  <div class="info">
    <span>Hi, my name is</span>
    <h1>Luis Mart√≠nez</h1>
    <span>Full Stack Developer</span>

    <p>Building the digital future, one website at a time</p>

    <a href="#contact">Let's work together!</a>
  </div>
  <article>
    <div class="monitor">
      <div class="animated" set:html={skill.htmlString} />
    </div>
    <div class="stand"></div>
  </article>
</section>

<style>
  * {
    margin: 0;
  }

  section {
    display: flex;
    justify-content: space-between;
    align-items: center;
    box-sizing: border-box;
    gap: 2rem;
  }

  .info {
    min-height: 100vh;
    display: flex;
    flex-direction: column;
    justify-content: center;
    gap: 1rem;
  }

  article {
    display: none;
    flex-direction: column;
    height: 100%;
    align-items: center;
    gap: 2rem;
  }

  .monitor {
    width: 20rem;
    height: 12rem;
    overflow-y: auto;
    overflow-x: hidden;
    border: solid 1em #333;
    border-radius: 0.5em;
    display: flex;
    justify-content: center;
    align-items: center;
  }
  .stand::before {
    content: "";
    display: block;
    position: relative;
    background: #222;
    width: 1.5rem;
    height: 2rem;
    top: -2rem;
    left: 4.25rem;
  }
  .stand {
    content: "";
    display: block;
    position: relative;
    background: #333;
    border-top-left-radius: 0.5em;
    border-top-right-radius: 0.5em;
    width: 10rem;
    height: 1rem;
  }

  .animated {
    transform: rotate3d(0, 1, 0, 45deg);
    width: fit-content;
    animation: 3s infinite linear rotate;
  }

  @keyframes rotate {
    from {
      transform: rotate3d(0, 1, 0, 0deg);
    }
    to {
      transform: rotate3d(0, 1, 0, 360deg);
    }
  }

  span {
    font-size: 1.75rem;
  }

  h1 {
    font-size: 3rem;
    color: #3498db;
    font-weight: 700;
  }

  p {
    color: #fff;
    font-size: 1.125rem;
    text-wrap: balance;
  }

  a {
    background-color: #3498db;
    width: fit-content;
    padding: 1rem 2rem;
    color: #000;
    text-decoration: none;
    font-weight: 700;
    border-radius: 1.5rem;
    font-size: 1.125rem;
    transition: 0.2s opacity;
  }
  a:visited {
    color: #000;
  }

  a:hover,
  a:active,
  a:focus {
    opacity: 0.8;
  }

  @media (min-width: 768px) {
    span {
      font-size: 2rem;
    }

    h1 {
      font-size: 4rem;
    }
  }

  @media (min-width: 1024px) {
    article {
      display: flex;
    }
  }
</style>
