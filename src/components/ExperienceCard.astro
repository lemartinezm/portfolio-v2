---
import Badge from "./Badge.astro";

interface Props {
  time: string;
  position: string;
  company: string;
  companyPage: string;
  description: string;
  skills: string[];
}

const { time, position, company, companyPage, description, skills } =
  Astro.props;
---

<li class="card">
  <div class="timeline">
    <div class="circle"></div>
    <div class="line"></div>
  </div>
  <div class="content">
    <span class="time">{time}</span>
    <h3>
      {position} - <a
        href={companyPage}
        target="_blank"
        rel="noopener noreferrer"
      >
        <span>
          {company}
        </span>
        <svg
          xmlns="http://www.w3.org/2000/svg"
          width="16"
          height="16"
          viewBox="0 0 36 36"
        >
          <path
            fill="currentColor"
            d="M27 33H5a2 2 0 0 1-2-2V9a2 2 0 0 1 2-2h10v2H5v22h22V21h2v10a2 2 0 0 1-2 2Z"
            class="clr-i-outline clr-i-outline-path-1"></path>
          <path
            fill="currentColor"
            d="M18 3a1 1 0 0 0 0 2h11.59L15.74 18.85a1 1 0 1 0 1.41 1.41L31 6.41V18a1 1 0 0 0 2 0V3Z"
            class="clr-i-outline clr-i-outline-path-2"></path>
          <path fill="none" d="M0 0h36v36H0z"></path>
        </svg>
      </a>
    </h3>
    <p>{description}</p>
    <div class="skills">
      {skills.map((skill) => <Badge name={skill} />)}
    </div>
  </div>
</li>

<style>
  .card {
    display: flex;
    list-style-type: none;
    padding: 0;
  }

  .card:hover .timeline,
  .card:hover .time {
    color: #3498db;
  }

  .timeline {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    transition: color 0.2s;
  }

  .time {
    transition: color 0.2s;
  }

  .circle {
    width: 1rem;
    height: 1rem;
    background-color: currentColor;
    border-radius: 50%;
  }

  .line {
    border-left: 1px solid #fff;
    flex: 1;
  }

  .content {
    padding: 0 1rem 2rem 1rem;
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }
  h3 {
    color: #fff;
    font-size: 1.5rem;
    margin: 0;
  }

  p {
    font-size: 1.125rem;
    margin: 0;
  }

  a {
    color: #fff;
    text-decoration: none;
    transition: 0.2s color;
  }

  a:visited {
    color: #fff;
  }
  a:hover {
    color: #3498db;
  }

  .clr-i-outline-path-2 {
    transition: 0.2s transform;
  }

  a:hover .clr-i-outline-path-2 {
    transform: translate(3px, -3px);
  }

  .skills {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
  }
</style>
