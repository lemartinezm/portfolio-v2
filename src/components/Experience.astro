---
import ExperienceCard from "./ExperienceCard.astro";
import { getCollection } from "astro:content";
const experiences = await getCollection("experience");
const formatedExperiences = experiences.sort(
  (a, b) => Number(b.id) - Number(a.id)
);
---

<section id="experience">
  <h2>Experience</h2>
  <ul>
    {
      formatedExperiences.map((experience) => (
        <ExperienceCard {...experience.data} />
      ))
    }
  </ul>

  <a href="/luis_martinez_full_stack_developer.pdf">View full resume</a>
</section>

<style>
  * {
    margin: 0;
  }

  section {
    padding: 3rem 0;
    display: flex;
    flex-direction: column;
    justify-content: center;
    gap: 1rem;
    max-width: 40rem;
  }

  h2 {
    font-size: 2rem;
  }

  p {
    font-size: 1.125rem;
  }

  ul {
    padding: 0;
  }

  a {
    background-color: #3498db;
    width: fit-content;
    padding: 1rem 2rem;
    color: #000;
    text-decoration: none;
    font-weight: 700;
    border-radius: 1.5rem;
    font-size: 1.125rem;
    transition: 0.2s opacity;
  }
  a:visited {
    color: #000;
  }

  a:hover,
  a:active,
  a:focus {
    opacity: 0.8;
  }

  @media (min-width: 768px) {
    h2 {
      font-size: 3rem;
    }
  }
</style>
